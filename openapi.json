openapi: 3.0.3
info:
  title: FinMate Watson Chat API
  version: 1.0.0
  description: Watson-backed chat endpoints
paths:
  /api/ai_chat_watson/watson/chat/:
    post:
      operationId: ai_chat_watson_watson_chat_create
      tags:
      - ai_chat_watson
      security:
      - jwtAuth: []
      responses:
        '200':
          description: No response body
  /api/ai_chat_watson/watson/init/:
    get:
      operationId: ai_chat_watson_watson_init_retrieve
      tags:
      - ai_chat_watson
      security:
      - jwtAuth: []
      responses:
        '200':
          description: No response body
  /api/aichat/finmate/chat/:
    post:
      operationId: aichat_finmate_chat_create
      description: |-
        POST /api/aichat/finmate/chat/
        Chat with FinMate, with UHFS + product context and optional file attachments.
      tags:
      - aichat
      security:
      - jwtAuth: []
      responses:
        '200':
          description: No response body
  /api/aichat/finmate/init/:
    get:
      operationId: aichat_finmate_init_retrieve
      description: |-
        GET /api/aichat/finmate/init/
        Returns UHFS breakdown + suggested products + creates a chat session.
      tags:
      - aichat
      security:
      - jwtAuth: []
      responses:
        '200':
          description: No response body
  /api/aichat/voice/ask:
    post:
      operationId: aichat_voice_ask_create
      description: |-
        POST /api/aichat/voice/ask
        Form-data: audio=@sample_voice.wav

        - Uploads audio to S3
        - Runs Amazon Transcribe with auto language detection
        - Generates FinMate advice using the same logic as /finmate/chat/
        - Synthesizes the reply using Polly in the detected/requested language
        - Returns MP3 audio with helpful headers (text, language, session id)
      tags:
      - aichat
      security:
      - jwtAuth: []
      responses:
        '200':
          description: No response body
  /api/auth/delete-user-cascade/:
    post:
      operationId: auth_delete_user_cascade_create
      description: |-
        POST /api/auth/delete-user-cascade/

        Completely delete a user and all related records from all tables.
        Admin-only endpoint.

        Request body:
        {
            "identifier": "username_or_phone_or_id",
            "skip_aws": false  // optional, skip AWS Rekognition deletion
        }
      tags:
      - auth
      security:
      - jwtAuth: []
      - {}
      responses:
        '200':
          description: No response body
  /api/auth/face/enroll/:
    post:
      operationId: auth_face_enroll_create
      description: |-
        POST /api/auth/face/enroll/
        Enroll user's face for facial recognition login.
        User must be authenticated (via OTP) first.
        Backward compatible: Users can still use OTP login even after enrolling face.
      tags:
      - auth
      security:
      - jwtAuth: []
      responses:
        '200':
          description: No response body
  /api/auth/face/login/:
    post:
      operationId: auth_face_login_create
      description: |-
        POST /api/auth/face/login/
        Login using facial recognition.
        Backward compatible: Users can still use OTP login if they prefer.
      tags:
      - auth
      security:
      - jwtAuth: []
      - {}
      responses:
        '200':
          description: No response body
  /api/auth/send-otp/:
    post:
      operationId: auth_send_otp_create
      description: POST /api/auth/send-otp
      tags:
      - auth
      security:
      - jwtAuth: []
      - {}
      responses:
        '200':
          description: No response body
  /api/auth/token/refresh/:
    post:
      operationId: auth_token_refresh_create
      description: |-
        Takes a refresh type JSON web token and returns an access type JSON web
        token if the refresh token is valid.
      tags:
      - auth
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/TokenRefresh'
          application/x-www-form-urlencoded:
            schema:
              $ref: '#/components/schemas/TokenRefresh'
          multipart/form-data:
            schema:
              $ref: '#/components/schemas/TokenRefresh'
        required: true
      responses:
        '200':
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/TokenRefresh'
          description: ''
